                  <input id="email" name="email" placeholder="somebody@example.com" type="email"></label> <label for="email">Create Username <input id="email" name="username" placeholder="jdoe" type="text"></label> <label for="password">Create Password <input id="password" name="password" placeholder="New Password" type="password"></label>
    					</fieldset>
    				</div-->
    			</div>
          <div class="row">
            <div class="large-4 large-centered columns">
              <input class="button expanded btn" type="submit" value="Sign Up">
            </div>
          </div>
    		</form>
    	</div>
    </div>

    <!-- floating austronaut -->
    <div class="aus-home">
      <img src="/assets/img/aust.png" alt="aust.png" width="130"/>
    </div>
</body>
