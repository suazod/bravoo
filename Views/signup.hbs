<body>
  <nav role="navigation">
      <div class="buttons-wrap">
        <span class="app-dashboard-logo">Welcome to Bravoo!</span>
        <a href="/" class="button login-btm back-to-home back"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back to Home </a>
      </div>
  </nav>

    <h2 class="text-center">Register</h2>
    <div class="container form-wrapper">
    	<div class="row large-8 large-centered columns">
    		<form action="/signup" class="log-in-form" id="signup" method="post" name="signup">
    			<div class="row">
    				<div class="large-12 large-centered columns">
              <h4 class="text-center">Bravoo! Please enter basic information</h4>
                <div class="row">
                    <div class="large-6 columns">
                      <label for="firstname">First Name
                      <input id="name" name="firstname" placeholder="First Name" type="text"></label>
                    </div>

                    <div class="large-6 columns">
                    <label for="lastname">Last Name
                    <input id="name" name="lastname" placeholder="Last Name" type="text"></label>
                    </div>
                  </div>

                  <div class="row">
                    <div class="large-6 columns">
                      <label for="email">Email
                      <input id="email" name="email" placeholder="somebody@example.com" type="email"></label>
                    </div>
                <div class="large-6 columns">
                  <label for="phone">Phone
                  <input id="phoneNumberField" name="phone" placeholder="Phone number" type="text"></label>
                </div>
                </div>
                  <label for="password">Create Password
                  <input id="password" name="password" placeholder="New Password" type="password"></label>
    				</div>
